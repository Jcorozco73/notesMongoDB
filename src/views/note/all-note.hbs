b<div class="row">
 {{#each note}}
 <div class="col-md-4">
    <div class="card">
        <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center"> 
                    {{title}} 
                    <a href="/note/edit/{{_id}}"><i class="fa-solid fa-pencil"></i></a>
                </h4>
                    <p>{{description}}</p> 
            
              <div class="card-footer d-flex justify-content-between align-items-end">
                <form action="/note/edit/{{_id}}">
                    <button type="submit" class="btn btn-primary">
                        Edit
                    </button>
                </form>
            <form action ="/note/delete/{{_id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-danger">
                    Delete
                </button>
            </form> 
       
              
          
                </div>
            </div>
        </div>
    </div>
 {{/each}}
</div>

    




